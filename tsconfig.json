{
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["*"]
    },
    "rootDir": "src",
    "strict": true,
    "target": "ES6"
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
